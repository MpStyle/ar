{
  "compilerOptions": {
    "jsx": "react",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5", "dom"]
  },
  "include": [
    "./src/ts/**/*",
    "./test/ts/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}