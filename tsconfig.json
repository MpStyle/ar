{
  "compilerOptions": {
    "declaration": false,
    "sourceMap": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "target": "es5"
  },
  "include": [
    "./src/ts/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}